@model UserProfileViewModel

@{
    ViewData["Title"] = "Profile Info";
}

<div>
  <h2>@Model.Username</h2>
  <a type="btn btn-info" href="/user/profile/edit/@Model.Id">Edit Profile</a>
</div>
<br />

<p><span class="bold">Email:</span> @Model.Email</p>
<p><span class="bold">Phone:</span> @Model.Phone</p>
<p><span class="bold">Cameras:</span> @Model.CamerasInStock in stock / @Model.CamerasOutOfStock out of stock</p>

<div class="cameras">
    <div class="container">
        <div class="row">
            @foreach (var camera in Model.Cameras)
            {
                @Html.Partial("_CameraCard", camera)
            }
        </div>
    </div>
</div>

@if (!Model.Cameras.Any())
{
    <p>The user is not selling any cameras. Go to <a href="/cameras/all">all cameras</a> to find more offers from other users.</p>
}
