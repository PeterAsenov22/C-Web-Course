@model PartFormViewModel

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" readonly="@(Model.IsEdit)" required class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" required class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" min="1" value="1" required class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    @if (!Model.IsEdit)
    {
        <div class="form-group">
            <label asp-for="SupplierId"></label>
            <select asp-for="SupplierId" asp-items="@Model.Suppliers" class="form-control"></select>
            <span asp-validation-for="SupplierId" class="text-danger"></span>
        </div>
    }
    <div>
        <input type="submit" class="btn btn-success" value="Save Part" />
    </div>
</form>

