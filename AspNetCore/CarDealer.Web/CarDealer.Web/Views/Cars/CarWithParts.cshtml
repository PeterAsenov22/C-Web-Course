@model CarWithPartsModel

@{
    ViewData["Title"] = $"{Model.Make} {Model.Model}";
}

<h2>@ViewData["Title"]</h2>
<br/>
<h3>Travelled Distance: @(Model.TravelledDistance / 1000) KM</h3>
<br/>

<h3 class="text-center">Parts</h3>
<br/>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var part in Model.Parts)
        {
            <tr>
                <td>
                    @part.Name
                </td>
                <td>
                    @part.Price.ToString("f2")
                </td>
            </tr>
        }
    </tbody>
</table>

