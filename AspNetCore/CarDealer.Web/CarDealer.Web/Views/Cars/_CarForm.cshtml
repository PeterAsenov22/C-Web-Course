@model CarFormViewModel

<form method="post">
    <div class="form-group">
        <label asp-for="Make"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TravelledDistance"></label>
        <input asp-for="TravelledDistance" min="0" class="form-control"/>
        <span asp-validation-for="TravelledDistance" class="text-danger"></span>
    </div>
    <div class="form-group">
        <select asp-for="SelectedParts"  asp-items="Model.AllParts" multiple class="form-control"></select>
        <small>*Hold "Ctrl" to select multiple parts</small>
    </div>
    <div>
        <input type="submit" class="btn btn-success" value="Save Car" />
    </div>
</form>
