@model CarsByMakeViewModel

@{
    ViewData["Title"] = $"{Model.Make.ToUpper()} Cars";
}

@if (Model.Cars.Any())
{
    <h2>@ViewData["Title"]</h2>
    <br/>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>
                Make
            </th>
            <th>
                Model
            </th>
            <th>
                TravelledDistance
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td>
                    @car.Make
                </td>
                <td>
                    @car.Model
                </td>
                <td>
                    @(car.TravelledDistance / 1000) KM
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <h2 class="text-danger">There are no existing cars with make @Model.Make.ToUpper() !</h2>
}



