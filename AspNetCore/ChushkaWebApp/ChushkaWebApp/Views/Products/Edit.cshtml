@model ChushkaWebApp.Web.ViewModels.Products.UpdateProductViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Product</h1>
<hr class="hr-2" />
<form class="mx-auto w-50" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" value="@Model.Name" placeholder="Name...">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input step="0.01" min="0" class="form-control" asp-for="Price" value="@Model.Price" placeholder="Price...">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea class="form-control" asp-for="Description" placeholder="Description...">@Model.Description</textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <h2 class="text-center">Product Type</h2>
    <hr class="w-50 hr-2" />
    <div class="row justify-content-around">
        @{ var types = new[] { "Food", "Domestic", "Health", "Cosmetic", "Other" }; }
        @foreach (var type in types)
        {
            <div class="col-md-2">
                <input name="type"
                       id="@type"
                       @if (type == Model.Type) { @: checked="checked"
                       }
                       value="@type"
                       type="radio" />
                <label for="@type">@type</label>
            </div>
        }
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <hr class="w-50 hr-2" />
    <div class="mt-4 d-flex justify-content-center">
        <button type="submit" class="btn chushka-bg-color text-white mr-4">Edit</button>
        <a href="javascript:window.history.back()" class="btn chushka-bg-color text-white">Cancel</a>
    </div>
</form>

